{
  "name": "restaurant-management-system",
  "version": "1.0.0",
  "description": "Restaurant Management System - Sprint 1 Implementation",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.public.json",
    "build:server": "tsc",
    "build:client": "tsc -p tsconfig.public.json",
    "start": "node dist/server.js",
